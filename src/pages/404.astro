---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <main class="min-h-screen flex flex-col items-center justify-center px-4 bg-gradient-to-b from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-gray-200 dark:text-gray-700 select-none">
        404
      </h1>
      <div class="relative -mt-16 mb-8">
        <h2 class="text-3xl font-medium text-gray-900 dark:text-gray-100">
          Sorry, page not found
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
          The page you are looking for might have been removed or temporarily unavailable
        </p>
      </div>
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 text-base font-medium text-white bg-gray-900 dark:bg-gray-100 dark:text-gray-900 rounded-lg transition-colors duration-200 hover:bg-gray-800 dark:hover:bg-gray-200"
      >
        Back to Home
        <svg
          class="ml-2 w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          />
        </svg>
      </a>
    </div>
  </main>
</Layout>
